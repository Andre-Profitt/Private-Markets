# Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://platform:platform@localhost:5432/platform_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=private-assets-platform

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=0.0.0.0

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Service Ports
IDENTITY_SERVICE_PORT=3001
PROFILES_SERVICE_PORT=3002
COMPANIES_SERVICE_PORT=3003
HOLDINGS_SERVICE_PORT=3004
MARKETPLACE_SERVICE_PORT=3005
DEALS_SERVICE_PORT=3006
DOCUMENTS_SERVICE_PORT=3007
PAYMENTS_SERVICE_PORT=3008
PRICING_SERVICE_PORT=3009
INDEXING_SERVICE_PORT=3010
NOTIFICATIONS_SERVICE_PORT=3011
ADMIN_SERVICE_PORT=3012

# External Integrations
KYC_PROVIDER_API_KEY=
KYC_PROVIDER_API_URL=https://api.kyc-provider.com
ESIGN_PROVIDER_API_KEY=
ESIGN_PROVIDER_API_URL=https://api.esign-provider.com
PAYMENT_PROVIDER_API_KEY=
PAYMENT_PROVIDER_API_URL=https://api.payment-provider.com

# Object Storage (S3 or compatible)
S3_BUCKET=private-assets-documents
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
LOG_LEVEL=info

# Security
ENCRYPTION_KEY=your-encryption-key-change-in-production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3000
